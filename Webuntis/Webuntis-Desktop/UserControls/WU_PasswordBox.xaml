<UserControl x:Class="Webuntis_Desktop.UserControls.WU_PasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Webuntis_Desktop.UserControls"
             mc:Ignorable="d" 
             >
    <Grid>
        <PasswordBox FontFamily="/Fonts/#Cascadia Mono" x:Name="Input" FontSize="15" Style="{DynamicResource Webuntis_PasswordBox}" Tag="{Binding Path=Placeholder}" LostKeyboardFocus="OnLostFocus" GotKeyboardFocus="OnFocus"></PasswordBox>
    </Grid>
</UserControl>
