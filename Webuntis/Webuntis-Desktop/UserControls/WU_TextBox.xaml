<UserControl x:Class="Webuntis_Desktop.UserControls.WU_TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Webuntis_Desktop.UserControls"
             mc:Ignorable="d" 
             >
    <Grid>
        <TextBox x:Name="Input" Tag="{Binding Path=Placeholder}" FontFamily="/Fonts/#Cascadia Mono" Style="{DynamicResource Webuntis_TextBox}" IsKeyboardFocusedChanged="OnKeyboardFocused" LostKeyboardFocus="OnLostFocus"></TextBox>
    </Grid>
</UserControl>
