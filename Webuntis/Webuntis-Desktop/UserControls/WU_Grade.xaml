<UserControl x:Class="Webuntis_Desktop.UserControls.WU_Grade"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Webuntis_Desktop.UserControls"
             mc:Ignorable="d" 
             Height="25" Width="50">
    <Grid>
        <Rectangle>
            <Rectangle.Effect>
                <DropShadowEffect Direction="0" BlurRadius="4"></DropShadowEffect>
            </Rectangle.Effect>
        </Rectangle>
        <Label Foreground="{Binding Path=ForegroundColor}" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Path=GradeContent}"></Label>
        <Rectangle Fill="Transparent" x:Name="UI_HoverPanel"></Rectangle>
    </Grid>
</UserControl>
